<h1>Hello there, <%= @user.name %>!</h1>



<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-lg-2 ">
        <h3>Your Planned Trips</h3>
    <table class="table-bordered">
        <tr>
            <th>Destination</th>
            <th>Travel Start Date</th>
            <th>Travel End Date </th>
            <th>The plan</th>

        </tr>
        <% @my_trips.each do |x| %>
        <tr>

            <td><a href="/trips/<%= x.id%>" ><%= x.trip.destination %></a></td>
            <td><%= x.trip.start_date.strftime("%B %d %Y")%></td>
            <td><%= x.trip.end_date.strftime("%B %d %Y") %></td>
            <td><%= x.trip.description %></td>

        </tr>
        <% end %>
    </table>

    </div>
    </div>
    <h2>Other User's Travel Plans</h2>
    <table class="table-bordered">
        <tr>
            <th>Name</th>
            <th>Destination</th>
            <th>Travel Start Date </th>
            <th>Travel End Date </th>
            <th>Do you want to join?</th>

        </tr>
        <% if @other_trips.any?  %>
        <% @other_trips.each do |x| %>
        <tr>

            <td><%= x.user.name %></td>
            <td><a href="/trips/<%= x.id%>" ><%= x.destination %></a></td>
            <td><%= x.start_date.strftime("%B %d %Y") %></td>
            <td><%= x.end_date.strftime("%B %d %Y") %></td>
            <td><a href="/joins/<%= x.id %>/join" role="button">Join</a></td>

        </tr>
        <% end %>
    </table>
    <% end %>
    <%= link_to "Add Travel Plan", new_trip_path %>
    <br>
    <%= link_to "Log out", sessions_logout_path, method: "delete" %>

</div>
