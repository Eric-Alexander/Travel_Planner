<h1>Hello there, <%= @user.name %>!</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-lg-2 ">
    <table class="table-bordered">
        <tr>
            <th>Destination</th>
            <th>Travel Start Date</th>
            <th>Travel End Date </th>
            <th>The plan</th>

        </tr>
        <% @trips.each do |x| %>
        <tr>

            <td><%= x.destination %></td>
            <td><%= x.start_date %></td>
            <td><%= x.end_date %></td>
            <td><%= x.description %></td>

        </tr>
        <% end %>
    </table>
    </div>
    </div><br>
</div>
