<h1>Trips#show</h1>

<h2> <%= @trip.destination %> </h2>

<h3> Planned By: <%= @trip.user.name %> </h3>





<h3> Description: <%= @trip.description %> </h3>

<h3> Travel Date From: <%= @trip.start_date %> </h3>

<h3> Travel Date To: <%= @trip.end_date %> </h3>

<h3> Other Users Joining the Trip:</h3>

<% @joins.each do |join| %>
  <ul>
    <h4><li><%= join.user.name %></li></h4>
  </ul>

<% end %>


<%= link_to "Home", user_path(current_user) %>
<%= link_to "Log out", sessions_logout_path, method: "delete" %>
