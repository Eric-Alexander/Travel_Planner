<h2>Trip Details</h2>

<dl class = "dl-horizontal">
  <dt><strong>Destination:</strong></dt>
  <dd><%= @trip.destination %></dd>
  <dt><strong>Organized By:</strong></dt>
  <dd><%= @trip.user.name %></dd>
  <dt><strong>The Plan:</strong></dt>
  <dd><%= @trip.description %></dd>
  <dt><strong>Start Date:</strong></dt>
  <dd><%= @trip.start_date.strftime("%B %d %Y") %></dd>
  <dt><strong>End Date:</strong></dt>
  <dd><%= @trip.end_date.strftime("%B %d %Y") %></dd>
</dl>

<h4> Other Users Joining the Trip:</h4>

<% @joins.each do |join| %>
  <ul>
    <h5><li><%= join.user.name %></li></h5>
  </ul>
  <% end %>
  <% if current_user.user_already_added?(@trip.id, current_user.id) %>
    <%= link_to "Join Trip", add_user_path(user: current_user, join: @trip.id),
                  class: "btn btn-primary",
                  method: :post %>
  <% else %>

      <button class ="btn btn-danger"><a href="/joins/<%= @trip.id %>/cancel" >Cancel</a></button>

  <% end %>
