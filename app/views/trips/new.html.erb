<h1>Trips#new</h1>
<p>Find me in app/views/trips/new.html.erb</p>
<div class = "row">
  <div class ="col-md-5">

<%= form_for (@trip) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<%= f.label :destination %>
<%= f.text_field :destination, class: 'form-control' %>

<%= f.label :description %>
<%= f.text_area :description, class: 'form-control' %>

<%= f.label :start_date %>
<%=f.date_field :start_date, class: 'form-control'  %>

<%= f.label :end_date, "Confirmation" %>
<%= f.date_field :end_date, class: 'form-control' %><br>

<%= f.submit "Add", class: "btn btn-success" %>

<% end %>
</div>
</div>
<%= link_to "Home", user_path(current_user) %>
<%= link_to "Log out", sessions_logout_path, method: "delete" %>
